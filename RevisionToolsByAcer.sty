\newcommand{\revise}[3]{
    \noindent
    \newline
    \textbf{On page {#1}:}\newline
    \newline
    Original:\newline
    \textit{"#2"}
    \newline
    \newline
    Revised:\newline
    \textit{"#3"}\newline}
